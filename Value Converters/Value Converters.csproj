<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <RootNamespace>AgentFire.Wpf.ValueConverters</RootNamespace>
    <UseWPF>true</UseWPF>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>3.0</Version>
    <PackageId>AgentFire.Wpf.ValueConverters</PackageId>
    <Authors>AgentFire</Authors>
    <PackageProjectUrl>https://github.com/AgentFire/AgentFire.Wpf.ValueConverters</PackageProjectUrl>
    <RepositoryType>github</RepositoryType>
    <RepositoryUrl>https://github.com/AgentFire/AgentFire.Wpf.ValueConverters</RepositoryUrl>
    <PackageTags>wpf binding value converter</PackageTags>
    <PackageReleaseNotes>Switched to core 3.0</PackageReleaseNotes>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
    <Description>Containts strongly-typed base classes for Value Conversion in WPF (IValueConverter interface - full binding support).</Description>
  </PropertyGroup>

  <ItemGroup>
    <None Include="License.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
